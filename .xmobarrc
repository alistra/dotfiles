Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , commands = [ Run StdinReader
       	            , Run Cpu [] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %d/%m/%y %H:%M:%S" "date" 1
		    , Run Com "hostname" [] "hostname" 60
		    , Run Com "uptime|tr ',' ' '|cut -d ' ' -f 4,5" [] "uptime" 600
		    , Run Com "ips || echo \"No network\"" [] "ips" 60
		    , Run Com "acpitool | egrep -v 'not available' | cut -d ' ' -f 12 | egrep -v '^$' || echo " [] "battery" 60
		    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=white>%cpu%</fc> <fc=gray>%memory%</fc> <fc=white>%swap%</fc> <fc=gray>Up: %uptime%</fc> <fc=white>(%battery%)</fc> <fc=gray>%hostname%</fc> <fc=white>%date%</fc> <fc=gray>%ips%</fc>"
       }
