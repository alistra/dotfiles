Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 96
       , commands = [ Run StdinReader
       	            , Run Cpu [] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %d/%m/%y %H:%M:%S" "date" 1
		    , Run Com "hostname" [] "hostname" 36000 
		    , Run Com "uptime|tr ',' ' '|cut -d ' ' -f 4,5" [] "uptime" 3600
		    , Run Com "ips" [] "ips" 60
		    , Run Com "acpitool | cut -d ' ' -f 12 | egrep -v '^$' | sed -e 's/available//' || echo \"charged\"" [] "battery" 60
		    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=white>%cpu%</fc> <fc=gray>%memory%</fc> <fc=white>(%battery%)</fc> <fc=gray>%hostname%</fc> <fc=white>%date%</fc> <fc=gray>%ips%</fc>"
       }
