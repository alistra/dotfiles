#{{{Settings
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
unset imap_passive
set print=no
set from="balicki.aleksander@gmail.com"        
set realname="Aleksander Balicki"
set use_from=yes
set editor=vim
set signature="$HOME/.sig"
set include=yes
set fast_reply=yes
set help=no
set mail_check=600
set pager_context=1
set pager_index_lines=10
set menu_scroll=yes
set pgp_verify_sig=no
set status_on_top=yes
set sort=threads 
set autoedit=yes
set edit_headers=yes
set charset="utf-8"
set noconfirmappend
unset confirmcreate
set fcc_attach

#}}}
#{{{Formats
set status_format=" %r %b %f %n      Del %d      Msgs %m %l %> (%P)"
set pager_format="%-10.10i %[!%a %b %d %R]"
set date_format="!%d/%m/%y	"
set index_format="%4C %Z %d %-15.15F %s"
set folder_format="%2C %t %8s %d %N %f"
#}}}
#{{{Headers
ignore *
unignore  Date To From: Subject X-Mailer Organization User-Agent
hdr_order Date From To Subject X-Mailer User-Agent Organization
#}}}
#{{{Colors
color   hdrdefault      yellow 		black
color   header          yellow 		black	"^from:"
color   header          yellow 		black 	"^subject:"

color   quoted          brightred       black
color   signature       brightblue     	black
color   indicator       brightyellow	black

color   error           red             black
mono    error           bold
color   status          black 		yellow
mono    status          bold
color   tree            black		yellow

color   tilde           brightmagenta  	black
color   body            brightblue      black    "[-a-z_0-9.]+@[-a-z_0-9.]+"
mono    body            bold                    	"[-a-z_0-9.]+@[-a-z_0-9.]+"
color   body            brightyellow    black   	"^Good signature"
mono    body            bold                    	"^Good signature"
color   body            brightwhite     red     	"^Bad signature from.*"
mono    body            bold                    	"^Bad signature from.*"
color   normal          white           black
color   message         yellow		black
color   attachment      brightgreen    	black
#}}}
