#!/bin/zsh
#{{{ adeli
if [ "`hostname`" = "adeli" ]
then
	if [ "$ZSHINIT" = "dev" ]
	then
		export PYTHONPATH="/var/django"
		cd /var/django/archfinch
	fi #}}}
#{{{ bialobrewy
elif [ "`hostname`" = "bialobrewy" ] 
then
	if [ "$ZSHINIT" = "rails" ]
	then
		Imgur-Directory-Listing/script/server
	elif [ "$ZSHINIT" = "seriale" ]
	then
		cd /torrents
	elif [ "$ZSHINIT" = "current" ]
	then
		cd /torrents
		fresh
	fi
fi #}}} 
#{{{all
if [ "$ZSHINIT" = "mail" ]
then
	alpine
elif [ "$ZSHINIT" = "vim" ]
then
	vim $VIMFILE
	unset VIMFILE
elif [ "$ZSHINIT" = "irc" ]
then
	ssh -t spock 'ZSHINIT=irc zsh'
elif [ "$ZSHINIT" = "wget" ]
then
	wget -nc --adjust-extension --load-cookies ~/.config/jumanji/cookies -O "$WGETOUTFILE" -- "$WGETFILE"
	exec xdg-open $WGETOUTFILE &
	disown
	unset ZSHINIT
	exit
elif [ "$ZSHINIT" = "torrents" ]
then
	if [ "`hostname`" = "bialobrewy" ]
	then
		tmux split-window -l11 'watch -n1 "tail -n10 /var/log/tvtorrents"'
	fi
	watch -n1 "transmission-remote -l"
fi #}}}
unset ZSHINIT
