#!/bin/zsh
if [ "`hostname`" = "bialobrewy" ]
then
	if [ "$ZSHINIT" = "seriale" ]
	then
		cd /torrents/serenity
	elif [ "$ZSHINIT" = "current" ]
	then
		cd /torrents/serenity
		fresh
	fi
fi

if [ "$ZSHINIT" = "mail" ]
then
	cone || alpine
elif [ "$ZSHINIT" = "vim" ]
then
	vim $VIMFILE
	unset VIMFILE
elif [ "$ZSHINIT" = "irc" ]
then
	ssh -t spock 'ZSHINIT=irc zsh'
elif [ "$ZSHINIT" = "torrents" ]
then
	if [ "`hostname`" = "bialobrewy" ]
	then
		tmux split-window -l11 'watch -n1 "tail -n10 /var/log/tvtorrents"'
	fi
	watch -n1 "transmission-remote 10.0.0.2 -l"
fi
unset ZSHINIT
